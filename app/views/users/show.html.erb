<div id="page-content">
  <h1 class="text-center mt-4"><%= @user.email.split("@")[0].capitalize %>'s Profile</h1>
  <h3 class="text-center mt-4">Posts</h3>
  <% if @user.posts.count==0 %>
    <h4 class="text-center mt-4"> No Posts Yet <h4>
    <% else %>   
      <div class="row justify-content-md-center">
        <% if @user.avatar.attached? %>
          <%= image_tag(@user.avatar_thumbnail) %>
            <% else %>    
              <%= image_tag("defualt.png", style:'width:30%') %>
        <% end %>
      </div>
        <div class="flickr_pagination mb-4">
          <%= will_paginate @posts, :container => false %>
        </div>
        <%= render 'posts/post' %>
        <div class="flickr_pagination mb-4">
          <%= will_paginate @posts, :container => false %>
        </div>
  <% end %>
</div>