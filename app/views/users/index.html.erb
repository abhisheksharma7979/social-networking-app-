<div id="page-content">
  <h1 class="text-center mt-4">Bloggers</h1>
    <div class="flickr_pagination">
      <%= will_paginate @users, :container => false %>
    </div>
    <div class="container">
      <% @users.each do |user| %>
        <div class="row justify-content-md-center">
          <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
              <div class="card-header font-italic">
                By <%= user.email.split("@")[0].capitalize %>
              </div>
              <div class="card-body">
                <h5 class="card-title"><%= pluralize(user.posts.count,"post") %></h5>
                <%= link_to "View Profile", user_path(user), class: "btn btn btn-outline-success" %>
                <% if user_signed_in? && user==current_blogger %>
                  <%= link_to "Edit Profile", edit_user_registration_path(current_user), class: "btn btn-outline-primary" %>
                <% end %>    
              </div>
              <div class="card-footer text-muted">
                <small>
                  Joined <%= time_ago_in_words(user.created_at) %> ago
                </small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="flickr_pagination mb-4">
      <%= will_paginate @users, :container => false %>
    </div>
</div>